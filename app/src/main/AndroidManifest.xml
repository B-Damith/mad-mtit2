<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mtit.gitso">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.mtit.gitso.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mtit.gitso.RepoListActivity"
            android:label="@string/title_activity_repo_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.mtit.gitso.IssueListActivity"
            android:label="@string/title_activity_issue_list"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>